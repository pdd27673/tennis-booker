# =============================================================================
# Tennis Booker Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values:
#   cp .env-example .env
# 
# Then edit .env with your actual credentials
# IMPORTANT: Never commit .env files to version control!
# 
# Quick Start for Local Development:
# 1. Copy this file: cp .env-example .env
# 2. Set minimum required values (see REQUIRED section below)
# 3. Run: ./scripts/run_local.sh

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=tennis-booker
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
API_PORT=8080
LOG_LEVEL=info

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
# These are required for the application to start

# MongoDB Configuration (REQUIRED)
MONGO_URI=mongodb://admin:YOUR_MONGO_PASSWORD@localhost:27017/tennis_booking?authSource=admin
MONGO_DB_NAME=tennis_booking
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=tennis_booking
MONGODB_USERNAME=admin
MONGODB_PASSWORD=your_secure_mongo_password

# Redis Configuration (REQUIRED)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0
REDIS_HOST=localhost
REDIS_PORT=6379

# Task Queue Configuration
TASK_QUEUE_NAME=tennis_scraping_tasks

# Scheduler Configuration
DEFAULT_SCRAPING_INTERVAL="0 */30 * * * *"

# Firecrawl API Configuration (for fallback scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# =============================================================================
# Authentication Configuration
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=tennis-booker
JWT_EXPIRY=24h

# Password Configuration
BCRYPT_COST=12

# =============================================================================
# HashiCorp Vault Configuration
# =============================================================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token
VAULT_NAMESPACE=

# Vault AppRole Authentication (Alternative to token)
VAULT_ROLE_ID=your-vault-role-id
VAULT_SECRET_ID=your-vault-secret-id

# Vault Paths
VAULT_SECRET_PATH=secret/tennis-booker
VAULT_JWT_SECRET_KEY=jwt-secret
VAULT_DB_SECRET_KEY=database-credentials

# Scraper Configuration
SCRAPER_INTERVAL=5m
SCRAPER_TIMEOUT=30s

# Booking Platforms
# LTA/Clubspark Credentials
LTA_USERNAME=your_lta_username
LTA_PASSWORD=your_lta_password

# Courtsides/Tennis Tower Hamlets Credentials
COURTSIDES_USERNAME=your_courtsides_username
COURTSIDES_PASSWORD=your_courtsides_password

# Notification Services
# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_from_number

# =============================================================================
# REQUIRED - Email/Notification Configuration
# =============================================================================
# Required for notification service to work

# SMTP Configuration (Gmail example) - REQUIRED for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
GMAIL_EMAIL=your-email@gmail.com
GMAIL_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# SendGrid (Alternative Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_sendgrid_from_email

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

RATE_LIMIT_IP_REQUESTS=100
RATE_LIMIT_IP_WINDOW=60
RATE_LIMIT_USER_REQUESTS=500
RATE_LIMIT_USER_WINDOW=60
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW=60

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =============================================================================
# AI/Task Master Configuration
# =============================================================================

ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.