# MongoDB Configuration
MONGO_URI=mongodb://admin:YOUR_PASSWORD@localhost:27017
MONGO_DB_NAME=tennis_booking

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=password
REDIS_DB=0

# Task Queue Configuration
TASK_QUEUE_NAME=tennis_scraping_tasks

# Scheduler Configuration
DEFAULT_SCRAPING_INTERVAL=0 */30 * * * *

# Firecrawl API Configuration (for fallback scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token

# API Server Configuration
API_PORT=8080

# Scraper Configuration
SCRAPER_INTERVAL=5m
SCRAPER_TIMEOUT=30s

# Booking Platforms
# LTA/Clubspark Credentials
LTA_USERNAME=your_lta_username
LTA_PASSWORD=your_lta_password

# Courtsides/Tennis Tower Hamlets Credentials
COURTSIDES_USERNAME=your_courtsides_username
COURTSIDES_PASSWORD=your_courtsides_password

# Notification Services
# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_from_number

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_sendgrid_from_email 


ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.